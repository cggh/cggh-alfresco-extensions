<alfresco-config>
	<!-- Document Library config section -->
	<config evaluator="string-compare" condition="DocumentLibrary">
		<aspects>
			<!-- Aspects that a user can see -->
			<visible>
				<aspect name="cggh-pub:publication" />
			</visible>

			<!-- Aspects that a user can add. Same as "visible" if left empty -->
			<addable>
			</addable>

			<!-- Aspects that a user can remove. Same as "visible" if left empty -->
			<removeable>
			</removeable>
		</aspects>

		<types>
			<type name="cm:folder">
				<subtype name="cggh-pub:publicationFolder" />
			</type>
		</types>
		
		<metadata-templates>
			<template id="isPublication">
				<evaluator>evaluator.doclib.metadata.hasPublicationAspect</evaluator>
				<line index="10" id="date" view="detailed">{date}{size}</line>
				<line index="50" id="contact" view="detailed">{cggh-pub_leadContact cggh.pub.leadContact}
				</line>
				<line index="60" id="exec" view="detailed">
					{cggh-pub:publicationStatus cggh.pub.pubStatus}
					{cggh-pub:submittedJournal cggh.pub.submittedJournal} {cggh-pub:submittedDate
					cggh.pub.submittedDate}
				</line>
			</template>

		</metadata-templates>
		
	</config>
	
	<config evaluator="node-type" condition="cggh-pub:publicationFolder">
		<forms>
			<form>
				<field-visibility>
					<!-- cm:folder -->
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
					<show id="cm:taggable" for-mode="view" force="true" />
					<show id="cm:categories" />


					<show id="cggh-pub:type" />
					<show id="cggh-pub:lead" />
					<show id="cggh-pub:category" />
					<show id="cggh-pub:onProdSchedule" />
					<show id="cggh-pub:pubTitle" />
					<show id="cggh-pub:leadContact" force="true" />
					<show id="cggh-pub:fundingCodes" />
					<show id="cggh-pub:submittedPubComm" />
					<show id="cggh-pub:reviewedDK" />
					<show id="cggh-pub:submittedDate" />
					<show id="cggh-pub:submittedJournal" />
					<show id="cggh-pub:publicationStatus" />
					<show id="cggh-pub:depositedPMC" />
					
				</field-visibility>
				<appearance>
					<!-- Field sets -->
					<!-- Seems to have trouble with associations -->
					<set id="pubMetadata" appearance="bordered-panel"
						label-id="cggh.pub.metadata.header" />

					<!-- Field set "" -->
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
					
					<field id="cm:description">
						<control template="/org/alfresco/components/form/controls/richtext.ftl">
							<control-param name="editorAppearance">custom</control-param>
							<control-param name="editorParameters">
								theme_advanced_resizing: true,
								theme_advanced_buttons1: "bold,italic,underline",
								theme_advanced_buttons2: null,
								theme_advanced_buttons3: null
							</control-param>
						</control>
					</field>
					<field id="cm:taggable">
						<control>
							<control-param name="compactMode">true</control-param>
							<control-param name="params">aspect=cm:taggable
							</control-param>
							<control-param name="createNewItemUri">/api/tag/workspace/SpacesStore
							</control-param>
							<control-param name="createNewItemIcon">tag</control-param>
						</control>
					</field>
					<field id="cm:categories">
						<control>
							<control-param name="compactMode">true</control-param>
						</control>
					</field>

					<!-- Field set "pubMetadata" -->
					<field id="cggh-pub:type" label-id="cggh.pub.type"
						set="pubMetadata" />
					<field id="cggh-pub:lead" label-id="cggh.pub.lead"
						set="pubMetadata" />
					<field id="cggh-pub:category" label-id="cggh.pub.category"
						set="pubMetadata">
						<control template="/org/alfresco/components/form/controls/selectmany.ftl">
							<control-param name="size">3</control-param>
						</control>
					</field>
					
					<field id="cggh-pub:onProdSchedule" label-id="cggh.pub.prodSchedule"
						set="pubMetadata" />
					<field id="cggh-pub:pubTitle" label-id="cggh.pub.pubTitle"
						set="pubMetadata" />
					<field id="cggh-pub:fundingCodes" label-id="cggh.pub.fundingCodes"
						set="pubMetadata" />
					<field id="cggh-pub:submittedPubComm" label-id="cggh.pub.submittedPC"
						set="pubMetadata" />
					<field id="cggh-pub:reviewedDK" label-id="cggh.pub.reviewed"
						set="pubMetadata" />
					<field id="cggh-pub:submittedDate" label-id="cggh.pub.submittedDate"
						set="pubMetadata" />
					<field id="cggh-pub:submittedJournal" label-id="cggh.pub.submittedJournal"
						set="pubMetadata" />
					<field id="cggh-pub:publicationStatus" label-id="cggh.pub.pubStatus"
						set="pubMetadata" />
					<field id="cggh-pub:depositedPMC" label-id="cggh.pub.deposited"
						set="pubMetadata" />

					<field id="cggh-pub:leadContact" label-id="cggh.pub.leadContact"
						set="pubMetadata">
						<control template="/org/alfresco/components/form/controls/authority.ftl">
							<control-param name="compactMode">true</control-param>
							<control-param name="forceEditable">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>