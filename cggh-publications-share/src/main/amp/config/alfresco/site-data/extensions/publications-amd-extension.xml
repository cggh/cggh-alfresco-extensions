<extension>
   <modules>
      <module>
         <id>Add "cggh" Package</id>
         <version>1.0</version>
         <auto-deploy>true</auto-deploy>
         <configurations>
           <config evaluator="string-compare" condition="WebFramework" replace="false">
             <web-framework>
                <dojo-pages>
                  <packages>
                    <package name="cggh" location="js/cggh"/>
                    <package name="dgrid" location="js/lib/dgrid"/>
                    <package name="put-selector" location="js/lib/put-selector"/>
                    <package name="xstyle" location="js/lib/xstyle"/>
                  </packages>
               </dojo-pages>
             </web-framework>
           </config>
         </configurations>
      </module>
   </modules>
</extension>